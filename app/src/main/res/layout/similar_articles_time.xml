<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/similar_image_item"
        android:layout_margin="10dp"
        android:src="@drawable/train"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>
    <View
        android:background="@color/light_white"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_favorite_border_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />
        <ImageView
            android:id="@+id/view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"

            android:layout_gravity="center"
            android:src="@drawable/eye"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:src="@drawable/bookmark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

    </LinearLayout>
    <TextView
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Lượt thích bài viết"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/similar_text_item"

        android:layout_margin="10dp"
        android:textSize="15dp"
        android:text="Note: 2-4 am has always been a strange time for me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/similar_time_item"
        android:text="Post: 1 ngày trước"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>